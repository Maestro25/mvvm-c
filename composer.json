{
    "name": "user/mvvm2025-11-01",
    "require": {
        "php": "^8.3",
        "colshrapnel/safemysql": "^1.2",
        "psr/http-message": "^2.0",
        "psr/http-factory": "^1.1",
        "psr/http-client": "^1.0",
        "psr/http-server-middleware": "^1.0",
        "psr/http-server-handler": "^1.0",
        "psr/container": "^2.0",
        "monolog/monolog": "^3.5",
        "laminas/laminas-stratigility": "^4.3",
        "php-di/php-di": "^7.0",
        "laminas/laminas-httphandlerrunner": "^2.13",
        "ramsey/uuid": "5.x-dev",
        "vlucas/phpdotenv": "^5.6",
        "firebase/php-jwt": "^6.0",
        "psr/event-dispatcher": "^1.0",
        "nyholm/psr7": "^1.8",
        "ezyang/htmlpurifier": "^4.16",
        "dragonmantank/cron-expression": "^3.0",
        "jenssegers/agent": "2.6",
        "symfony/event-dispatcher": "^7.0",
        "laminas/laminas-hydrator": "5.0.x-dev",
        "nyholm/psr7-server": "^1.0"
    },
    "config": {
        "platform": {"php": "8.3.6"},
        "optimize-autoloader": true,
        "sort-packages": true,
        "prefer-stable": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {"App\\": "app/"}
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test:single": "vendor/bin/phpunit --filter 'UserRepositoryTest::testGetByIdReturnsUserOrNull' tests/Infrastructure/Persistence/Repositories/UserRepositoryTest.php",
        "test:suite": "vendor/bin/phpunit --testsuite \"Selected Tests\"",
        "run_tests": "php scripts/run_tests.php",
        "migrate:up": "php scripts/migrate.php migrate:up --verbose",
        "migrate:down": "php scripts/migrate.php migrate:down --verbose",
        "migrate:status": "php scripts/migrate.php migrate:status",
        "migrate:reset": "php scripts/migrate.php migrate:down --steps=1000 --verbose && php scripts/migrate.php migrate:up --verbose"
    }
}
